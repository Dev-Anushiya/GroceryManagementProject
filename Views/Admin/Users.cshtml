@model IEnumerable<GroceryManSystem.Models.User>

@{
    ViewBag.Title = "Users";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Is Premium</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@(user.IsPremium ? "Yes" : "No")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Admin", new { id = user.UserId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
