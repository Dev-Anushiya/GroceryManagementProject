@model List<GroceryManSystem.Models.Order>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Orders List</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Admin", new { orderId = order.OrderId })" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
