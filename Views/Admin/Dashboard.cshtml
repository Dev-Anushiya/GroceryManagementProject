@model GroceryManSystem.Models.DashboardViewModel
@*<a href="~/Models/DashboardViewModel.cs">~/Models/DashboardViewModel.cs</a>*@
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
   
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Users</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalUsers</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Orders</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalOrders</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Low Stock Products</div>
                <div class="card-body">
                    @foreach (var product in Model.LowStockProducts)
                    {
                        <h5 class="card-title">
                            @product.ProductName: @product.Stock
                        </h5>
                    }
                </div>
            </div>
        </div>
    </div>

    <h3>Low Stock Products</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.LowStockProducts)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Stock</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>