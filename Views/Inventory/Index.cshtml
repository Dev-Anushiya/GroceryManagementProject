<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h4 id="cart-count">Cart (0)</h4>
        </div>
        @*<div class="col-md-6 text-end">
                <button class="btn btn-primary me-2" onclick="redirectToCart()">View Cart</button>
                <button class="btn btn-secondary" onclick="redirectToOrders()">View My Orders</button>
            </div>*@
    </div>

    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm p-3" style="height: 400px;">
                    <img src="@Url.Content(item.ImageUrl)" class="card-img-top img-fluid" style="height: 130px; object-fit: contain;" alt="@item.Product">
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@item.Product</h6>
                        <p class="card-text text-muted">@item.Description</p>
                        <p class="text-success fw-bold">Price: €@item.Price.ToString("F2")</p>

                        <div class="d-flex align-items-center mb-3">
                            <button class="btn btn-outline-danger btn-sm" onclick="decreaseQuantity('@item.ProductId')">-</button>
                            <span id="quantity-@item.ProductId" class="mx-3 fw-bold">0</span>
                            <button class="btn btn-outline-success btn-sm" onclick="increaseQuantity('@item.ProductId')">+</button>
                        </div>

                        <button class="btn btn-success w-100" onclick="addToCart('@item.ProductId')">Add to Cart</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/Inventory.js"></script>
