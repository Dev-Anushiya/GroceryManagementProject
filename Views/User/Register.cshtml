@model GroceryManSystem.Models.User

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(u => u.Username)
        @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
    </div>
    <div>

        @Html.LabelFor(u => u.Password)
        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(u => u.IsPremium)
        @Html.CheckBoxFor(u => u.IsPremium)
    </div>
    <section class="col-md-3" aria-labelledby="librariesTitle">

        <p>Existing Account? Login <a class="" href="@Url.Action("Login", "User")">here..</a></p>
    </section>
    <button type="submit" class="btn btn-primary">Register</button>
}
